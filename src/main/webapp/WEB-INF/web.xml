<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>TUToreS â€” UTS</display-name>

  <!-- AUTH -->
  <servlet><servlet-name>Login</servlet-name><servlet-class>com.tutores.servlet.auth.LoginServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Login</servlet-name><url-pattern>/login</url-pattern></servlet-mapping>

  <servlet><servlet-name>Logout</servlet-name><servlet-class>com.tutores.servlet.auth.LogoutServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Logout</servlet-name><url-pattern>/logout</url-pattern></servlet-mapping>

  <servlet><servlet-name>Registro</servlet-name><servlet-class>com.tutores.servlet.auth.RegistroServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Registro</servlet-name><url-pattern>/registro</url-pattern></servlet-mapping>

  <!-- ADMIN -->
  <servlet><servlet-name>AdminDashboard</servlet-name><servlet-class>com.tutores.servlet.admin.AdminDashboardServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>AdminDashboard</servlet-name><url-pattern>/admin/dashboard</url-pattern></servlet-mapping>

  <servlet><servlet-name>Aprobaciones</servlet-name><servlet-class>com.tutores.servlet.admin.AprobacionServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Aprobaciones</servlet-name><url-pattern>/admin/aprobaciones</url-pattern></servlet-mapping>

  <servlet><servlet-name>GestionMaterias</servlet-name><servlet-class>com.tutores.servlet.admin.GestionMateriasServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>GestionMaterias</servlet-name><url-pattern>/admin/materias</url-pattern></servlet-mapping>

  <servlet><servlet-name>GestionUsuarios</servlet-name><servlet-class>com.tutores.servlet.admin.GestionUsuariosServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>GestionUsuarios</servlet-name><url-pattern>/admin/usuarios</url-pattern></servlet-mapping>

  <!-- TUTOR -->
  <servlet><servlet-name>DocenteDashboard</servlet-name><servlet-class>com.tutores.servlet.docente.DocenteDashboardServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>DocenteDashboard</servlet-name><url-pattern>/docente/dashboard</url-pattern></servlet-mapping>

  <servlet><servlet-name>ConfigSemestre</servlet-name><servlet-class>com.tutores.servlet.docente.ConfigSemestreServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>ConfigSemestre</servlet-name><url-pattern>/docente/semestre</url-pattern></servlet-mapping>

  <servlet><servlet-name>HistorialDocente</servlet-name><servlet-class>com.tutores.servlet.docente.HistorialDocenteServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>HistorialDocente</servlet-name><url-pattern>/docente/historial</url-pattern></servlet-mapping>

  <!-- ESTUDIANTE -->
  <servlet><servlet-name>EstudianteDashboard</servlet-name><servlet-class>com.tutores.servlet.estudiante.EstudianteDashboardServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>EstudianteDashboard</servlet-name><url-pattern>/estudiante/dashboard</url-pattern></servlet-mapping>

  <servlet><servlet-name>BuscarTutoria</servlet-name><servlet-class>com.tutores.servlet.estudiante.BuscarTutoriaServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>BuscarTutoria</servlet-name><url-pattern>/estudiante/buscar</url-pattern></servlet-mapping>

  <servlet><servlet-name>Reservar</servlet-name><servlet-class>com.tutores.servlet.estudiante.ReservarServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Reservar</servlet-name><url-pattern>/estudiante/reservar</url-pattern></servlet-mapping>

  <servlet><servlet-name>Cancelar</servlet-name><servlet-class>com.tutores.servlet.estudiante.CancelarServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Cancelar</servlet-name><url-pattern>/estudiante/cancelar</url-pattern></servlet-mapping>

  <servlet><servlet-name>HistorialEst</servlet-name><servlet-class>com.tutores.servlet.estudiante.HistorialEstudianteServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>HistorialEst</servlet-name><url-pattern>/estudiante/historial</url-pattern></servlet-mapping>

  <welcome-file-list><welcome-file>index.jsp</welcome-file></welcome-file-list>

  <error-page><error-code>404</error-code><location>/views/error.jsp</location></error-page>
  <error-page><error-code>500</error-code><location>/views/error.jsp</location></error-page>

  <session-config><session-timeout>60</session-timeout></session-config>
</web-app>
